<%- include('head'); %>
<style>

  input[type=range]::-webkit-slider-thumb {
    background-color: red;
  }
  input[type=range]::-moz-range-thumb {
    background-color: red;
  }
  input[type=range]::-ms-thumb {
    background-color: red;
  }

  /***** These are to edit the thumb and the text inside the thumb *****/
  input[type=range] + .thumb {
    display: none;
  }
  input[type=range] + .thumb.active .value {
    color: red;
  }
  </style>
<body>
<%- include('navbar'); %>
<div class="container">
  <form name="profile_edit" action="/users/profile/?_method=PATCH" method="POST">
    <div class="row">
      <div class="input-field col s12">
        <label for="name"><b>Name</b></label>
        <input id="name" name="name" type="text" value="">
      </div>
    </div>
    <div class="row">
      <div class="col s12 range-field">
        <b>Calories: <span id="value"></span></b>
        <input type="range" name="calories" id="calories"min="0" max="5000" step="25" value="">
        <script>
          let calSlider = document.getElementById("calories");
          let output = document.getElementById("value");
          output.innerHTML = calSlider.value;
          calSlider.oninput = function(){
            output.innerHTML = this.value;
          }
        </script>
      </div>
    </div>
    <div class="row">
      <div class="col s6 range-field">
      <b>Sugar: <span id="sugarValue"></span></b>
        <input id="sugar" name="sugar" type="range" min="0" max="100" step="1">
        <script>
          let sugarSlider = document.getElementById("sugar");
          let sugarOutput = document.getElementById("sugarValue");
          sugarOutput.innerHTML = sugarSlider.value;
          sugarSlider.oninput = function(){
            sugarOutput.innerHTML = this.value;
          }
        </script>
      </div>
      <div class="col s6 range-field" value="">
        <b>Fat:<span id="fatValue"></span></b>
        <input type="range" id="fat" name="fat"min="0" max="100" step="1" value="">
        <script>
          let fatSlider = document.getElementById("fat");
          let fatOutput = document.getElementById("fatValue");
          fatOutput.innerHTML = fatSlider.value;
          fatSlider.oninput = function(){
            fatOutput.innerHTML = this.value;
          }
        </script>
      </div>
    </div>
    <div class="row">
      <div class="col s6 range-field">
        <b>Protein: <span id="proteinValue"></span></b>
        <input type="range" name="protein" id="protein"min="0" max="300" step="5" value="">
        <script>
          let proteinSlider = document.getElementById("protein");
          let proteinOutput = document.getElementById("proteinValue");
          proteinOutput.innerHTML = proteinSlider.value;
          proteinSlider.oninput = function(){
            proteinOutput.innerHTML = this.value;
          }
        </script>
      </div>
      <div class="col s6 range-field">
        <b>Carbohydrates: <span id="carbValue"></span></b>
        <input type="range" id="carbohydrates" name="carbohydrates" min="0" max="200" step="5" value="">
        <script>
          let carbSlider = document.getElementById("carbohydrates");
          let carbOutput = document.getElementById("carbValue");
          carbOutput.innerHTML = carbSlider.value;
          carbSlider.oninput = function(){
            carbOutput.innerHTML = this.value;
          }
        </script>
      </div>
    </div>
    <div class="row">
      <div class="col s6 range-field">
        <b>Fiber: <span id="fiberValue"></span></b>
        <input type="range" id="fiber" name="fiber" min="0" max="100" step="1" value="">
        <script>
          let fiberSlider = document.getElementById("fiber");
          let fiberOutput = document.getElementById("fiberValue");
          fiberOutput.innerHTML = fiberSlider.value;
          fiberSlider.oninput = function(){
            fiberOutput.innerHTML = this.value;
          }
        </script>
      </div>
      <div class="col s6">
        <b>Bad Fat: <span id="badValue"></span></b>
        <input type="range" id="bad_fat" name="bad_fat" min="0" max="100" step="1" value="">
        <script>
          let badSlider = document.getElementById("bad_fat");
          let badOutput = document.getElementById("badValue");
          badOutput.innerHTML = badSlider.value;
          badSlider.oninput = function(){
            badOutput.innerHTML = this.value;
          }
        </script>
      </div>
    </div>
    <button type="submit">Submit</button>
  </form>
</div>
</body>
</html>
