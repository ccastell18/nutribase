<%- include('head', {scripts: []}); %>
<body>
<%- include('navbar'); %>
<div class="container">
  <h2>Profile Editor</h2>
  <h5>Configure Your Health</h5>
  <form name="profile_edit" action="/users/profile/?_method=PATCH" method="POST">
    <div class="row">
      <div class="input-field col s4">
        <label for="name">Name</label>
        <input id="name" name="name" type="text" value="">
      </div>
    </div>
    <div class="row">
      <div class="col s4 range-field">
        <label for="calories">Calories:</label>
        <input type="range" name="calories" id="calories" min="0" max="5000" step="25" value="">
      </div>
      <div class="col s2 switch" >
        <label>
          Limit
          <input type="checkbox" id="caloriesGoal" name="caloriesGoal"/>
          <span class="lever"></span>
          Goal
        </label>
      </div>
      <div class="col s4 range-field" value="">
        <label for="sugar">Sugar:</label>
        <input id="sugar" name="sugar" type="range" min="0" max="100" step="1">
      </div>
      <div class="col s2 switch">
        <label>
          Limit
          <input type="checkbox" name="sugarGoal" id="sugarGoal"/>
          <span class="lever"></span>
          Goal
        </label>
      </div>
    </div>
    <div class="row">
      <div class="col s4 range-field" value="">
        <label for="fat">Fat:</label>
        <input type="range" id="fat" name="fat"min="0" max="100" step="1" value="">
      </div>
      <div class="col s2 switch">
        <label>
          Limit
          <input type="checkbox" name="fatGoal" id="fatGoal" />
          <span class="lever"></span>
          Goal
        </label>
      </div>
      <div class="col s4 range-field">
        <label for="protein">Protein:</label>
        <input type="range" name="protein" id="protein"min="0" max="300" step="5" value="">
      </div>
      <div class="col s2 switch">
        <label>
          Limit
          <input type="checkbox" name="proteinGoal" id="proteinGoal" />
          <span class="lever"></span>
          Goal
        </label>
      </div>
    </div>
    <div class="row">
      <div class="col s4 range-field">
        <label for="carbohydrates">Carbohydrates</label>
        <input type="range" id="carbohydrates" name="carbohydrates" min="0" max="200" step="5" value="">
      </div>
      <div class="col s2 switch">
        <label>
          Limit
          <input type="checkbox" name="carbohydratesGoal" id="carbohydratesGoal" />
          <span class="lever"></span>
          Goal
        </label>
      </div>
      <div class="col s4 range-field">
        <label for="fiber">Fiber:</label>
        <input type="range" id="fiber" name="fiber" min="0" max="100" step="1" value="">
      </div>
      <div class="col s2 switch">
        <label>
          Limit
          <input type="checkbox" name="fiberGoal" id="fiberGoal" />
          <span class="lever"></span>
          Goal
        </label>
      </div>
    </div>
    <div class="row">
      <div class="col s4">
        <label for="bad_fat">Bad Fat:</label>
        <input type="range" id="bad_fat" name="bad_fat" min="0" max="100" step="1" value="">
      </div>
      <div class="col s2 switch">
        <label>
          Limit
          <input type="checkbox" name="bad_fatGoal" id="bad_fatGoal" />
          <span class="lever"></span>
          Goal
        </label>
      </div>
      <button class="btn" type="submit">Submit</button>
    </div>
  </form>
</div>
</body>
</html>
